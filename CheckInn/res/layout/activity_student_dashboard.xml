<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvSchedule"
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:drawableTop="@drawable/schedule"
                android:text="Schedule"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvEnterAvailability"
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:drawableTop="@drawable/availibility"
                android:src="@drawable/ic_launcher"
                android:text="Enter availability"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f9f9f9"
            android:orientation="horizontal" >

            <TextView
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:src="@drawable/ic_launcher"
                android:drawableTop="@drawable/cancel"
                android:text="Cancel availability"
                android:id="@+id/tvCancelShift"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <TextView
                style="@style/DashboardButton"
                android:contentDescription="@null" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:visibility="invisible" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>