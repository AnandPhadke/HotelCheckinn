<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvAssignShift"
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:drawableTop="@drawable/schedule"
                android:text="Assign shift"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvCancel"
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:drawableTop="@drawable/cancel"
                android:src="@drawable/cancel"
                android:text="Cancel shift"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f9f9f9"
            android:orientation="horizontal" >

            <TextView
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:drawableTop="@drawable/availibility"
                android:text="Enter operating \nhours"
                android:id="@+id/tvOperatingHours"
                android:visibility="visible"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:drawableTop="@drawable/cancel_calender"
                 android:textColor="@android:color/black" 
                 android:id="@+id/tvCancelOperatingHours"
                android:text="Cancel operating \nhours"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:drawableTop="@drawable/operating_hours"
                 android:textColor="@android:color/black" 
                 android:id="@+id/tvOperatingHoursSchedule"
                android:text="Operating hours \nschedule"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                style="@style/DashboardButton"
                android:contentDescription="@null"
                android:visibility="invisible" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>